@{
	Layout = "~/Views/Shared/_LayoutLogin.cshtml";
	ViewBag.Title = "Login";

	string returnUrl = ViewBag.ReturnUrl;

	var mensagemNovaSenha = (string)TempData["MensagemNovaSenha"];
}

@if (mensagemNovaSenha != null)
{
	<show-message time="3">@mensagemNovaSenha</show-message>
}

<formulario-login return-url="@returnUrl" forgot-password="true"></formulario-login>
